# load preamble
/control/execute                           ./gedet/lar_pplus/Bi214/edep/log/preamble.mac

/MG/eventaction/rootfilename               ./gedet/lar_pplus/Bi214/edep/raw-gedet-lar_pplus-Bi214-edep-ch$CHANNEL.root
#/MG/output/WriteMacroToOutput             true                ### is default ###
#/MG/output/WriteNumberOfEventsToFile      true                ### is default ###

/MG/output/saveOnlyEventsWithEnergyDeposit true
#/MG/output/saveOnlyEventsWithCoincidence  false               ### is default ###

/run/initialize

### Confine source volume to cryo LAr ###
/MG/generator/confine                           volume
/MG/generator/volume                            CryoLiquidPhysical

### A cylinder inside the LAr ###
/MG/generator/Sampling/volume/name                     Cylinder
/MG/generator/Sampling/volume/innerCylinderRadius      $INNERRADIUS
/MG/generator/Sampling/volume/outerCylinderRadius      $OUTERRADIUS
/MG/generator/Sampling/volume/cylinderHeight           $HEIGHT
/MG/generator/Sampling/volume/offsetCenterXPos         $XPOS
/MG/generator/Sampling/volume/offsetCenterYPos         $YPOS
/MG/generator/Sampling/volume/offsetCenterZPos         $ZPOS

### Bi214
/MG/generator/select                       G4gun
/MG/generator/g4gun/cone_on                true
/gun/particle                              ion
/gun/ion                                   83 214
/gun/energy                                0 eV

/tracking/verbose                          0
/run/beamOn                                PRIMARIES
